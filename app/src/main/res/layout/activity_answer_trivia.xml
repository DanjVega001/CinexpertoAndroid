<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".features.trivia.ui.views.activities.AnswerTriviaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_home"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBackToHomeFromTrv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/color_main"
                app:srcCompat="@drawable/arrow_back" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/alata"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:text="Niveles de Trivia"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGoTriviasLvl1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/back_btn_level1_trivia"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:fontFamily="@font/alata"
                android:paddingLeft="60dp"
                android:paddingRight="20dp"
                android:text="Cine Novato"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnGoTriviasLvl2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/back_btn_level2_trivia"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:fontFamily="@font/alata"
                android:paddingLeft="60dp"
                android:paddingRight="20dp"
                android:text="Experto CinÃ©filo"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnGoTriviasLvl3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/back_btn_level3_trivia"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:fontFamily="@font/alata"
                android:paddingLeft="60dp"
                android:paddingRight="20dp"
                android:text="Maestro del cine"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>